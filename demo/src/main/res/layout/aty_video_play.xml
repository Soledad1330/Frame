<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:minHeight="200dp">

        <ImageView
            android:id="@+id/video_iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_video_list_play_big" />

        <com.lvchuang.widget.media.video.view.SuperVideoPlayer
            android:id="@+id/video_view_super_videoview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"></com.lvchuang.widget.media.video.view.SuperVideoPlayer>

    </FrameLayout>
</LinearLayout>